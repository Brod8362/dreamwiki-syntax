{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "dreamwiki",
	"patterns": [
		{
			"include": "#overlength_word"
		},
		{
			"include": "#grimes"
		},
		{
			"include": "#commands"
		},
		{
			"include": "#title"
		},
		{
			"include": "#tags"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#links"
		},
		{
			"include": "#todo"
		},
		{
			"include": "#incomplete_command"
		}
	],
	"repository": {
		"grimes": {
			"patterns": [{
				"name": "constant.numeric.dreamwiki",
				"match": "\\d"
			}]
		},
		"commands": {
			"patterns": [{
				"name": "keyword.command.dreamwiki",
				"match": "\\^ ?(justify|curtains|grimes|curtainGrimes|secret) ?\\^.*\\^"
			}]
		},
		"title": {
			"patterns": [{
				"name": "string.unquoted.dreamwiki",
				"match": "\\^ ?title ?\\^.*\\^"
			}]
		},
		"tags": {
			"patterns": [{
				"name": "entity.name.tag.dreamwiki",
				"match": "\\^ ?tags ?\\^.*\\^"
			}]
		},
		"comments": {
			"patterns": [{
				"name": "comment.line.dreamwiki",
				"match": "\\^ ?comments? ?\\^.*\\^"
			}]
		},
		"links": {
			"patterns": [{
				"name": "string.interpolated.dreamwiki",
				"match": "[A-Z]"
			}]
		},
		"incomplete_command": {
			"patterns": [{
				"name": "invalid.illegal.command.dreamwiki",
				"match": "(\\^.*)"
			}]
		},
		"overlength_word": {
			"patterns": [{
				"name": "invalid.illegal.length.dreamwiki",
				"match": "\\b\\S{41,}\\b"
			}]
		},
		"todo": {
			"patterns": [{
				"name": "comment.block.documentation.dreamwiki",
				"match": "\\^ ?todo ?\\^.*\\^"
			}]
		}
		
	},
	"scopeName": "source.dream"
}